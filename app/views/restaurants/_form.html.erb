<%= simple_form_for @restaurant, html: { class: "form-group"} do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, input_html: { placeholder: "Cotton Restaurant", class: 'form-control' } %>
  <%= f.input :address, input_html: { class: 'form-control' }  %>
  <%= f.input :phone_number, input_html: { class: 'form-control' }  %>
  <%= f.input :category, as: :select, input_html: { class: 'form-control' }, collection: Restaurant::CATEGORIES, include_blank: "Select a category" %>
  <%= f.submit class: "btn btn-success" %>
<% end %>
